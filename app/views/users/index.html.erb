<div>
    <h2>Register</h2>
        <span style = "color:red"><%= flash[:user_errors] %></span>
        <span style = "color:green"><%= flash[:user_success] %></span>
        <form action="/signup" method="post">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <p>Name: <input type="text" name="user[name]"></p>
            <p>Alias: <input type="text" name="user[alias]"></p>
            <p>Email: <input type="email" name="user[email]"></p>
            <p>Password: <input type="password" name="user[password]"></p>
            <p>*Password should be at least 8 characters*</p>
            <p>Confirm password: <input type="password" name="password_confirmation" ></p>
            <p><input type="submit" value="Register"></p>
        </form>
        </div>
        <div>
            <h2>Login</h2>
            <span style = "color:red"><%= flash[:errors] %></span>
            <form action="/login" method="post">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                <p>Email: <input type="text" name="email"></p>
                <p>Password: <input type="password" name="password"    ></p>
                <p><input type="submit" value="Login"></p>
            </form>
        </div>
    